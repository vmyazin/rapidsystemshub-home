<div class="contact-form mt-8 w-full flex justify-center">
  <form class="space-y-4 max-w-xl w-full">
    <div class="form-group">
      <label for="name" class="block text-sm font-medium text-default">Name</label>
      <input type="text" id="name" name="name" required class="mt-1 p-2 block bg-default w-full text-current border border-current shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
    </div>

    <div class="form-group">
      <label for="email" class="block text-sm font-medium text-default">Email</label>
      <input type="email" id="email" name="email" required class="mt-1 p-2 block bg-default w-full border border-current shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
    </div>

    <div class="form-group">
      <label for="message" class="block text-sm font-medium text-default">Message</label>
      <textarea id="message" name="message" rows="4" required class="mt-1 p-2 block bg-default w-full border border-current shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50"></textarea>
    </div>

    <div class="form-group flex items-start">
      <input type="checkbox" id="optIn" name="optIn" class="mt-1 h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
      <label for="optIn" class="ml-2 block text-sm text-default">
        Agree to receive occasional email updates. Opt-out at any time.
      </label>
    </div>

    <!-- Honeypot field - hidden from real users, bots will fill it -->
    <div class="hp-field" style="position: absolute; left: -9999px; width: 1px; height: 1px;">
      <label for="website">Website</label>
      <input type="text" id="website" name="website" tabindex="-1" autocomplete="off">
    </div>

    <div class="flex justify-center">
        <button type="submit" class="py-2 px-4 bg-green-600 hover:bg-green-700 focus:outline-none focus:border-green-700 focus:ring focus:ring-green-500 focus:ring-opacity-50 text-white font-bold rounded-md shadow-sm">Submit</button>
    </div>

  </form>
</div>

<div id="thankYouMessage" class="mt-8 hidden text-center">
  <h2 class="text-lg font-semibold">Thank You!</h2>
  <p>We've received your message and will get back to you soon.</p>
</div>
